{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": ["**", "!scripts/**/*"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": {
				"noExplicitAny": "off",
				"useErrorMessage": "warn"
			},
			"correctness": {
				"noUnusedImports": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"enabled": true,
			"quoteStyle": "double",
			"arrowParentheses": "asNeeded",
			"trailingCommas": "es5",
			"indentWidth": 4,
			"indentStyle": "tab",
			"lineWidth": 120,
			"lineEnding": "lf",
			"jsxQuoteStyle": "double"
		}
	},
	"json": {
		"formatter": {
			"enabled": true,
			"indentWidth": 4,
			"indentStyle": "tab",
			"lineWidth": 120,
			"lineEnding": "lf"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	}
}
