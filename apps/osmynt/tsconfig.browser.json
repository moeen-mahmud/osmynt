{
	"extends": "./tsconfig.json",
	"compilerOptions": {
		"target": "ES2020",
		"lib": ["ES2020", "DOM", "DOM.Iterable", "WebWorker"],
		"module": "ESNext",
		"moduleResolution": "bundler",
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"strict": true,
		"noEmit": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"types": ["chrome", "node"]
	},
	"include": ["src/browser/**/*"],
	"exclude": ["node_modules", "dist"]
}
